<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    tools:background="@color/black">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="6dp"
        android:fillViewport="true"
        app:cardBackgroundColor="#10FF2CDF"
        app:cardCornerRadius="50dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--todo kategoria wyswietlana jako np pasek koloru - kazda kategoria ma swoj kolor-->


            <TextView
                android:id="@+id/occurence_name"
                style="@style/Widget.Counter.ListItemTextView"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:maxLength="15"
                android:textColor="@color/mediumGray"

                app:layout_constraintBottom_toBottomOf="@+id/ic_category"
                app:layout_constraintEnd_toStartOf="@+id/time_from_last"
                app:layout_constraintStart_toEndOf="@+id/ic_category"
                app:layout_constraintTop_toTopOf="@+id/ic_category"
                tools:text="Kofeina" />

            <TextView
                android:id="@+id/time_from_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/occurence_name"
                android:fontFamily="sans-serif-medium"

                android:text="3:33"
                android:textAlignment="center"
                android:textColor="@color/lightMediumGray"
                app:layout_constraintBottom_toBottomOf="@+id/occurence_name"


                app:layout_constraintEnd_toStartOf="@+id/ic_watch"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@+id/occurence_name"
                app:layout_constraintTop_toTopOf="@+id/occurence_name" />

            <ImageView
                android:id="@+id/ic_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/occurence_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                app:srcCompat="@drawable/ic_graph"
                app:tint="@color/lightMediumGray" />

            <ImageView
                android:id="@+id/ic_watch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/time_from_last"
                app:layout_constraintEnd_toStartOf="@+id/occurIcon"
                app:layout_constraintStart_toEndOf="@+id/time_from_last"
                app:layout_constraintTop_toTopOf="@+id/time_from_last"
                app:srcCompat="@drawable/ic_watch"
                app:tint="@color/lightMediumGray" />

            <ImageView
                android:id="@+id/occurIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="45dp"
                android:layout_marginEnd="4dp"
                android:importantForAccessibility="no"
                android:outlineAmbientShadowColor="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/ic_watch"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/ic_watch"
                app:layout_constraintTop_toTopOf="@+id/ic_watch"
                app:srcCompat="@drawable/occur_more_ic"
                app:tint="#70D72D2D" />




        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>