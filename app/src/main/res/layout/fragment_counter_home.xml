<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin"
        tools:context=".CounterHomeFragment">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/new_occurency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/new_occurency"
            />

        <TextView
            android:id="@+id/occurency_name_label"
            style="@style/Widget.Counter.Header"
            android:layout_marginStart="@dimen/margin_between_elements"
            android:layout_height="50dp"
            android:layout_width="130dp"
            android:text="@string/occurency_name"
            app:layout_constraintEnd_toStartOf="@+id/occurency_time_to_label"
            app:layout_constraintHorizontal_weight="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/new_occurency" />
        <TextView
            android:id="@+id/occurency_time_from_label"
            style="@style/Widget.Counter.Header"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/margin_between_elements"
            android:text="@string/time_from"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/occurency_time_to_label"
            app:layout_constraintTop_toBottomOf="@id/new_occurency" />
        <TextView
            android:id="@+id/occurency_time_to_label"
            style="@style/Widget.Counter.Header"
            android:layout_below="@+id/occurency_name_label"
            android:layout_marginStart="@dimen/margin_between_elements"
            android:text="@string/time_to"
            android:textAlignment="center"
            app:layout_constraintEnd_toStartOf="@+id/occurency_time_from_label"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/occurency_name_label"
            app:layout_constraintTop_toBottomOf="@id/new_occurency" />

        <View
            android:id="@+id/divider"
            style="@style/Divider"
            android:layout_marginTop="@dimen/margin_between_elements"
            app:layout_constraintBottom_toTopOf="@+id/occurencies_holder"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/occurency_name_label" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/occurencies_holder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            >
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/occurencies_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:scrollbars="vertical"
                />
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>