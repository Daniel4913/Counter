<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
>

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="1dp"
        android:fillViewport="true"
        app:cardCornerRadius="50dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <TextView
                android:id="@+id/date_full"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/time_from"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/time_from"
                tools:text="01.01.1111 15:25:21" />

            <TextView
                android:id="@+id/time_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/date_full"
                android:layout_marginStart="8dp"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/time_last"
                app:layout_constraintStart_toEndOf="@+id/date_full"
                app:layout_constraintTop_toTopOf="@+id/time_last"

                tools:text="3:21:26" />

            <TextView
                android:id="@+id/time_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="20dp"
                app:layout_constraintBottom_toBottomOf="@+id/time_spent_with_timer"
                app:layout_constraintStart_toEndOf="@id/time_from"
                app:layout_constraintTop_toTopOf="@+id/time_spent_with_timer"
                tools:text="3:00" />

            <TextView
                android:id="@+id/time_spent_with_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="@+id/occurIcon"
                app:layout_constraintEnd_toStartOf="@+id/occurIcon"
                app:layout_constraintStart_toEndOf="@+id/time_last"
                app:layout_constraintTop_toTopOf="@+id/occurIcon"
                tools:text="0:20" />

            <ImageView
                android:id="@+id/occurIcon"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="4dp"
                android:importantForAccessibility="no"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
 />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>