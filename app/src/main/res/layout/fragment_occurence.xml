<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".OccurenceFragment">

    <EditText
        android:id="@+id/occurence_icon_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation=".33dp"
        android:outlineAmbientShadowColor="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_category_24"
        app:tint="@color/lightMediumGray" />

    <TextView
        android:id="@+id/occurency_name"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:text="Zadzwon do mamy"
        app:layout_constraintBottom_toBottomOf="@+id/occurence_icon_imageView"
        app:layout_constraintStart_toEndOf="@+id/occurence_icon_imageView"
        app:layout_constraintTop_toTopOf="@+id/occurence_icon_imageView" />

    <TextView
        android:id="@+id/list_size_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#B08C74FF"
        app:layout_constraintEnd_toStartOf="@id/since"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/occurence_create_date_"
        style="@style/Widget.Counter.TextViewSmall"
        android:layout_width="wrap_content"
        android:padding="1dp"
        android:text="date;date;date"
        android:textColor="#9000A8FF"
        app:layout_constraintBottom_toBottomOf="@+id/since"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/since" />

    <TextView
        android:id="@+id/since"
        style="@style/Widget.Counter.TextViewSmall"
        android:layout_width="wrap_content"

        android:padding="1dp"
        android:text="since: "
        android:textColor="#9000A8FF"
        app:layout_constraintBottom_toBottomOf="@+id/list_size_textView"
        app:layout_constraintStart_toEndOf="@+id/list_size_textView"
        app:layout_constraintTop_toTopOf="@+id/list_size_textView" />

    <TextView
        android:id="@+id/occurency_category"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:text="zdrowie"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_name"
        app:layout_constraintStart_toEndOf="@+id/occurency_name"
        app:layout_constraintTop_toTopOf="@+id/occurency_name"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/occur_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:src="@drawable/ic_expand_less"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_category"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/occurency_category"
        tools:srcCompat="@drawable/ic_expand_less" />

    <TextView
        android:id="@+id/timer_counter"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="50dp"
        android:padding="10dp"
        android:text="00:00:00"
        android:textColor="#4574ac"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/occur_icon" />

    <TextView
        android:id="@+id/occurency_time_from_label"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_from_last"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/occurence_icon_imageView" />

    <TextView
        android:id="@+id/occurency_time_from"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:text="000"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_from_label"
        app:layout_constraintStart_toEndOf="@+id/occurency_time_from_label"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_from_label" />

    <TextView
        android:id="@+id/occurency_time_to_label"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/occurency_time_from" />

    <TextView
        android:id="@+id/occurency_time_to"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:text="-000"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_to_label"
        app:layout_constraintStart_toStartOf="@+id/occurency_time_from"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_to_label" />

    <TextView

        android:id="@+id/occurence_interval_label"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rob to co:"
        app:layout_constraintStart_toStartOf="@+id/occurency_time_to_label"
        app:layout_constraintTop_toBottomOf="@+id/occurency_time_to_label" />


    <TextView
        android:id="@+id/interval_textView"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="2 days"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/occurence_interval_label"

        app:layout_constraintStart_toStartOf="@+id/occurency_time_to"
        app:layout_constraintTop_toTopOf="@+id/occurence_interval_label" />

    <TextView
        android:id="@+id/how_long_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxLines="1"
        android:text="Na podstawie timera wykonanie tego srednio zajmuje ci 10 dni"
        android:textColor="#8C74FF"
        app:layout_constraintStart_toStartOf="@+id/occurence_interval_label"
        app:layout_constraintTop_toBottomOf="@+id/occurence_interval_label" />

    <com.google.android.material.card.MaterialCardView
        android:id="@id/descriptions_holder"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="#2000A8FF"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toTopOf="@id/divider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/how_long_textView">

        <TextView
            android:id="@+id/desciption"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="7dp"

            tools:text="blablalbalb" />


    </com.google.android.material.card.MaterialCardView>

    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_marginTop="@dimen/margin_between_elements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/descriptions_holder" />


    <!--        todo GRAPH/LIST -->
    <ImageView
        android:id="@+id/toggle_view"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_graph"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider"
        app:tint="#D5C8C8C8" />


    <Button
        android:id="@+id/start_timer"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginStart="16dp"
        android:background="#0800A8FF"
        android:padding="0dp"
        android:text="startstop"
        android:textColor="#8C74FF"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/toggle_view"
        app:layout_constraintStart_toEndOf="@+id/toggle_view"
        app:layout_constraintTop_toTopOf="@+id/toggle_view"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/reset_timer"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:background="#0800A8FF"
        android:padding="0dp"
        android:shadowColor="#30284f2b"
        android:shadowRadius="8"
        android:text="reset"
        android:textColor="#284f2b"
        android:textColorHighlight="#4574ac"

        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/start_timer"
        app:layout_constraintEnd_toStartOf="@+id/add_activity"
        app:layout_constraintStart_toEndOf="@+id/start_timer"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/add_activity"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_marginEnd="-10dp"
        android:background="#2046C0FF"
        android:padding="0dp"
        android:text="add"
        android:textColor="#FF5722"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/reset_timer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/reset_timer" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/occurence_detail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_label" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete occurence"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_btn"
        app:layout_constraintTop_toTopOf="@+id/edit_btn" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Date"
        app:layout_constraintStart_toStartOf="@+id/toggle_view"
        app:layout_constraintTop_toBottomOf="@+id/toggle_view" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="godzina"
        app:layout_constraintBottom_toBottomOf="@+id/date_label"
        app:layout_constraintStart_toEndOf="@+id/date_label"
        app:layout_constraintTop_toTopOf="@+id/date_label" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="jakis/nr"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />


</androidx.constraintlayout.widget.ConstraintLayout>
