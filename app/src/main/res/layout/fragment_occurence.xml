<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.OccurrenceFragment">

    <EditText
        android:id="@+id/occurence_icon_editText"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:elevation=".33dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/occurency_name"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:text="Zadzwon do mamy"
        app:layout_constraintBottom_toBottomOf="@+id/occurence_icon_editText"
        app:layout_constraintStart_toEndOf="@+id/occurence_icon_editText"
        app:layout_constraintTop_toTopOf="@+id/occurence_icon_editText" />

    <TextView
        android:id="@+id/list_size_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:textColor="#B08C74FF"
        app:layout_constraintEnd_toStartOf="@id/since"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/occurence_create_date_"
        style="@style/Widget.Counter.TextViewSmall"
        android:layout_width="wrap_content"
        android:padding="1dp"
        android:text="date;date;date"
        android:textColor="#9000A8FF"
        app:layout_constraintBottom_toBottomOf="@+id/since"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/since" />

    <TextView
        android:id="@+id/since"
        style="@style/Widget.Counter.TextViewSmall"
        android:layout_width="wrap_content"

        android:padding="1dp"
        android:text="since: "
        android:textColor="#9000A8FF"
        app:layout_constraintBottom_toBottomOf="@+id/list_size_textView"
        app:layout_constraintStart_toEndOf="@+id/list_size_textView"
        app:layout_constraintTop_toTopOf="@+id/list_size_textView" />

    <TextView
        android:id="@+id/occurency_category"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        android:padding="10dp"
        android:text="zdrowie"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_name"
        app:layout_constraintStart_toEndOf="@+id/occurency_name"
        app:layout_constraintTop_toTopOf="@+id/occurency_name"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/occurency_time_from_label"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_from_last"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/occurence_icon_editText" />

    <TextView
        android:id="@+id/occurency_time_from"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_from_label"
        app:layout_constraintStart_toEndOf="@+id/occurency_time_from_label"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_from_label"
        tools:text="000" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_from_label"
        app:layout_constraintStart_toEndOf="@+id/occurency_time_from_label"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_from_label" />

    <TextView
        android:id="@+id/occurency_time_to_label"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/occurency_time_from" />

    <TextView
        android:id="@+id/occurency_time_to"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_to_label"
        app:layout_constraintStart_toStartOf="@+id/occurency_time_from"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_to_label"
        tools:text="-000" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_to_label"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_to_label" />

    <TextView

        android:id="@+id/occurence_interval_label"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Rob to co:"
        app:layout_constraintStart_toStartOf="@+id/occurency_time_to_label"
        app:layout_constraintTop_toBottomOf="@+id/occurency_time_to_label" />


    <TextView
        android:id="@+id/interval_textView"
        style="@style/Widget.Counter.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="2 days"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/occurence_interval_label"

        app:layout_constraintStart_toStartOf="@+id/occurency_time_to"
        app:layout_constraintTop_toTopOf="@+id/occurence_interval_label" />



    <View
        android:id="@+id/divider"
        style="@style/Divider"
        android:layout_marginTop="@dimen/margin_between_elements"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interval_textView" />


    <!--        todo GRAPH/LIST -->


    <Button
        android:id="@+id/add_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#2046C0FF"
        android:padding="0dp"
        android:text="add"
        android:textColor="#FF5722"

        app:layout_constraintBottom_toTopOf="@+id/textView6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/occurence_detail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_label" />

    <Button
        android:id="@+id/edit_btn"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Edit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/delete_btn"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/delete_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="delete occurence"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edit_btn"
        app:layout_constraintTop_toTopOf="@+id/edit_btn" />

    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintBottom_toTopOf="@+id/occurence_detail_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="godzina"
        app:layout_constraintBottom_toBottomOf="@+id/date_label"
        app:layout_constraintStart_toEndOf="@+id/date_label"
        app:layout_constraintTop_toTopOf="@+id/date_label" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="jakis/nr"
        app:layout_constraintBottom_toBottomOf="@+id/textView5"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="@+id/textView5" />




</androidx.constraintlayout.widget.ConstraintLayout>
