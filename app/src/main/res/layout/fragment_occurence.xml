<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/margin"
        tools:context=".OccurenceFragment">

        <!--//todo tu bedzie appbar, po lewo cofansko-->
        <!--//todo trzeba jeszcze tu dodac aby zbyt dluga nazwa nie wyswietlala sie odrazu, tylko bylo dostepne jej rozwiniecie -->
        <!--//todo recycler view z lista dat kiedy zaszly zdarzenia-->
        <TextView
            android:id="@+id/occurency_name"
            style="@style/Widget.Counter.TextView"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Caffeine" />

        <TextView
            android:id="@+id/occurency_time_from"
            style="@style/Widget.Counter.TextView"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/occurency_name"
            tools:text="@string/time_from" />

        <TextView
            android:id="@+id/occurency_time_to"
            style="@style/Widget.Counter.TextView"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:text="@string/time_to"
            app:layout_constraintTop_toBottomOf="@+id/occurency_time_from"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent" />
        <View
            android:id="@+id/divider"
            style="@style/Divider"
            android:layout_marginTop="@dimen/margin_between_elements"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/occurency_time_to" />

        <TextView
            android:id="@+id/total_times_label"
            style="@style/Widget.Counter.TextView"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/margin_between_elements"
            android:layout_marginTop="@dimen/margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="Total times" />

        <TextView
            android:id="@+id/total_times"
            style="@style/Widget.Counter.TextView"
            android:layout_width="wrap_content"

            android:layout_marginTop="@dimen/margin"
            android:layout_marginEnd="@dimen/margin"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/divider"
            tools:text="5" />
        <Button
            android:id="@+id/edit_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Edit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>