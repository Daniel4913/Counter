<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    tools:context=".ui.OccurrenceFragment">

    <TextView
        android:id="@+id/list_size_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="3"
        app:layout_constraintEnd_toStartOf="@id/since"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/occurence_create_date_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="date;date;date"
        app:layout_constraintBottom_toBottomOf="@+id/since"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/since" />

    <TextView
        android:id="@+id/since"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="since: "
        app:layout_constraintBottom_toBottomOf="@+id/list_size_textView"
        app:layout_constraintStart_toEndOf="@+id/list_size_textView"
        app:layout_constraintTop_toTopOf="@+id/list_size_textView" />

    <TextView
        android:id="@+id/label_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Category:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/occurency_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="zdrowie"
        app:layout_constraintBottom_toBottomOf="@+id/label_category"
        app:layout_constraintStart_toEndOf="@+id/label_category"
        app:layout_constraintTop_toTopOf="@+id/label_category" />

    <TextView
        android:id="@+id/occurency_time_from_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_from_last"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_category" />

    <TextView
        android:id="@+id/occurency_time_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_from_label"
        app:layout_constraintStart_toEndOf="@+id/occurency_time_from_label"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_from_label"
        tools:text="000" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_from_label"
        app:layout_constraintStart_toEndOf="@+id/occurency_time_from_label"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_from_label" />

    <TextView
        android:id="@+id/occurency_time_to_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/time_to"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/occurency_time_from" />

    <TextView
        android:id="@+id/occurency_time_to"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_to_label"
        app:layout_constraintStart_toStartOf="@+id/occurency_time_from"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_to_label"
        tools:text="-000" />

    <ProgressBar
        android:id="@+id/progressBar2"
        style="?android:attr/progressBarStyle"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/occurency_time_to_label"
        app:layout_constraintEnd_toEndOf="@+id/progressBar"
        app:layout_constraintStart_toStartOf="@+id/progressBar"
        app:layout_constraintTop_toTopOf="@+id/occurency_time_to_label" />

    <TextView
        android:id="@+id/occurence_interval_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Interval"
        app:layout_constraintStart_toStartOf="@+id/occurency_time_to_label"
        app:layout_constraintTop_toBottomOf="@+id/occurency_time_to_label" />


    <TextView
        android:id="@+id/interval_textView"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:text="2 days"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/occurence_interval_label"

        app:layout_constraintStart_toStartOf="@+id/occurency_time_to"
        app:layout_constraintTop_toTopOf="@+id/occurence_interval_label" />


    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/interval_textView" />


    <!--        todo GRAPH/LIST -->


    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/occurence_detail_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:scrollbars="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_label" />


    <TextView
        android:id="@+id/date_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        app:layout_constraintBottom_toTopOf="@+id/occurence_detail_recycler_view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/divider" />

    <TextView
        android:id="@+id/hour_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:text="godzina"
        app:layout_constraintBottom_toBottomOf="@+id/date_label"
        app:layout_constraintStart_toEndOf="@+id/date_label"
        app:layout_constraintTop_toTopOf="@+id/date_label" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="keep goin"
        app:layout_constraintBottom_toBottomOf="@+id/hour_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hour_label"
        app:layout_constraintTop_toTopOf="@+id/hour_label" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/add_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="32dp"
        android:contentDescription="Add activity"
        android:src="@drawable/ic_done"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
