<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:padding="5dp"

    >

            <ImageView
                android:id="@+id/ic_occurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_fox"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/occurence_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/occurence_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:ellipsize="marquee"
                android:fontFamily="@font/catamaran_thin"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                app:layout_constraintBottom_toBottomOf="@+id/ic_occurrence"
                app:layout_constraintEnd_toStartOf="@+id/time_to_next"
                app:layout_constraintStart_toEndOf="@id/ic_occurrence"
                app:layout_constraintTop_toTopOf="@+id/ic_occurrence"
                tools:text="Kofeina" />

            <TextView
                android:id="@+id/time_to_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/occurence_name"
                app:layout_constraintEnd_toStartOf="@id/time_from_last"
                app:layout_constraintTop_toTopOf="@+id/occurence_name"
                tools:text="3:333333" />

            <TextView
                android:id="@+id/time_from_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                app:layout_constraintBottom_toBottomOf="@+id/occurence_name"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/occurence_name"
                tools:text="44444444" />
<!--    todo kolor dividera to kolor kategorii-->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:background="@color/md_theme_light_tertiary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>