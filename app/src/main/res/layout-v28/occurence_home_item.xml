<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    tools:background="@color/black">

    <com.google.android.material.card.MaterialCardView

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="6dp"
        android:fillViewport="true"
        app:cardBackgroundColor="#10FF2CDF"
        app:cardCornerRadius="50dp"
        app:cardElevation="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <!--todo kategoria wyswietlana jako np pasek koloru - kazda kategoria ma swoj kolor-->

            <TextView
                android:id="@+id/ic_occurrence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/occurence_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="IC" />

            <TextView
                android:id="@+id/occurence_name"
                style="@style/Widget.Counter.ListItemTextView"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:ellipsize="marquee"
                android:fontFamily="sans-serif"
                android:textColor="@color/mediumGray"
                app:layout_constraintBottom_toBottomOf="@+id/ic_occurrence"
                app:layout_constraintStart_toEndOf="@id/ic_occurrence"
                app:layout_constraintTop_toTopOf="@+id/ic_occurrence"
                tools:text="Kofeina" />

            <TextView
                android:id="@+id/time_to_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                android:textColor="@color/lightMediumGray"
                app:layout_constraintBottom_toBottomOf="@+id/occurence_name"
                app:layout_constraintEnd_toStartOf="@id/time_from_last"
                app:layout_constraintTop_toTopOf="@+id/occurence_name"
                tools:text="3:333333" />

            <TextView
                android:id="@+id/time_from_last"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="sans-serif-medium"
                android:textAlignment="center"
                android:textColor="@color/lightMediumGray"
                app:layout_constraintBottom_toBottomOf="@+id/occurence_name"
                app:layout_constraintEnd_toStartOf="@+id/occurIcon"
                app:layout_constraintTop_toTopOf="@+id/occurence_name"
                tools:text="44444444" />

            <ImageView
                android:id="@+id/occurIcon"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginEnd="12dp"
                android:importantForAccessibility="no"
                android:outlineAmbientShadowColor="@color/red"
                app:layout_constraintBottom_toBottomOf="@+id/time_from_last"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/time_from_last"
                app:srcCompat="@drawable/occur_more_ic"
                 />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>